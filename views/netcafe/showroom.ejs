<%include ../partials/header%>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Esportiser</h1>
			<p>Find closest place to enjoy esport</p>
			<p>
				<a href="/netcafe/new" class="btn btn-primary btn-lg">Add new gaming location</a>
			</p>
		</div>
		
	</header>
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<%netcafes.forEach(function(netcafe){%>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%=netcafe.image%>">
					<div class="caption">
						<h4><%=netcafe.name%></h4>
					</div>
					<p>
						<a href="/netcafe/<%=netcafe._id%>" class="btn btn-primary">More Info</a>
					</p>
				</div>
				
				
			</div>
		<%});%>
	</div>
	
</div>



<%include ../partials/footer%>